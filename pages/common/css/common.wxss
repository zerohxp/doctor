page {
    height:100%;
    background-color:#f5f5f5;
}
.page.has_bottom{
    padding-bottom:65px;
    margin-bottom:10px;

}
.page .weui-cell:before{
    border:0;
}
.doctor_button,button[type="primary"].doctor_button{
    width:90%;
    background-color:#00acff;
    color:#fff;
    border:0;
    font-weight:600;
}
button[loading][type="primary"].doctor_button{
    background-color:#00acff;
    color:#fff;
   
}
button[disabled][type="primary"].doctor_button {
    background-color:#00acff;
    opacity:0.4;
}

.backdrop{
      width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.4);
    color: #fff;
    text-align: center;
    font-size: 16px;
}

.page__footer{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    display:inline-block;
    height:65px;
    background-color:#ffffff;
    border-top:1px solid #e1e1e1;
    z-index:999;

}
.page__footer .doctor_button{
    margin-top:10px;
    margin-bottom:0px;
}
.color_gray{
    color:#c5c5c5 !important;
}