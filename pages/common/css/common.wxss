.page .weui-cell:before{
    border:0;
}
.doctor_button,button[type="primary"].doctor_button{
    width:80%;
    background-color:#50BE8A;
    color:#fff;
    border:0;
    font-weight:600;
}
button[loading][type="primary"].doctor_button{
    background-color:#50BE8A;
    color:#fff;
   
}
button[disabled][type="primary"].doctor_button {
    background-color:#50BE8A;
    opacity:0.6;
}

.backdrop{
      width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.4);
    color: #fff;
    text-align: center;
    font-size: 16px;
}

