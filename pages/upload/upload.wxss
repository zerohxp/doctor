@import '../common/css/common.wxss';
page{
    height:100%;
    background-color:#f5f5f5;
}
.page__hd{
    padding:50px 20px;
}
.page__hd p{
    text-align:center;
    font-size:18px;
    display:block;
    font-weight:600;
    color:#414b50;
}

.page__hd p span{
    color:#0091db;
}
.page__bd{
    background-color:#fff;
}
.page__bd p{
   display:inline-block;
    font-size:14px;
    margin-top:30px;
    padding-left:50px;
    position:relative;
    color:#ff7a00;
}
.page__bd p i{
    background-image:url('../common/img/icon-1.png');
    width:30px;
    height:30px;
    background-size:100%;
    position:absolute;
    left:18px;
    top:-3px;

}
.page__ft{
    background-color:#fff;
    padding-top:10px;
    padding-bottom:20px;

}
.page__bd .erweima{
    border:1px solid #919191;
    width:200px;
    height:200px;
    position:relative;
    left:50%;
    margin-left:-100px;
    margin-top:25px;
    background-color:#fff;
}
.page__ft p{
    font-size:14px;
    display:block;
    text-align:center;
    letter-spacing:-1px;
    color:#414b50;
}
