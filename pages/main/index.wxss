@import '../common/css/common.wxss';
page{
    height:100%;
    background-color:#EEECED;
}
.before_login_p{
    width:100%;
    padding:5px 20px;
    display:inline-block;

}
.login_top{
    background-color:#fff;
    border-bottom:1px solid #eee;
}

.weui-cell_image span{
   line-height:60px;
    float:left;
    font-size:16px;
    margin-left:10px;

}
.weui-cell_image image{
   width:60px;
  height:60px;
   border-radius:50%;
   float:left;
}
.login_user_info p{
    font-size:15px;
    margin-left:10px;
}
.login_user_right{
   float:right;
    width:58px;
    text-align:right;
    font-size:12px;

}
.login_user_right p{
    font-size:12px;
    width:100%;
    display:inline-block;
    margin-left:0;

}
.login_top_bottom{
   font-size:14px;
    padding:5px 20px;
    display:flex;

}
.login_center{
    background-color:#fff;

}
.login_center .login_center_block{
    text-align:center;
    width:100%;
    display:inline-block;
    white-space: nowrap;
    padding:10px 0;
    border-bottom:1px solid #eee;
    font-size:16px;
    color:#50BE8A;
}
.login_center .login_center_block span{
    display:inline-block;
    width:33%;
    border-right:1px solid #eee;

}
.login_center .login_center_block span:last-child{
    border:0;
}
.login_center .login_center_flag{
    width:100%;
    display:inline-block;
    font-size:18px;
    padding:10px 20px;

}
.login_center .login_center_flag .flag_tit{
    font-weight:800;
}
.login_center .login_center_flag .flag_span{
    font-size:15px;
    color:#666666;
    margin-left:10px;
}
.profession_develop{
    margin-top:20px;
    text-align:center;
    font-weight:600;
    padding:0;
}
.profession_develop .profession_develop_scroe{
    font-size:26px;
}
.profession_develop_tit{
     text-align:center;
    padding:0;
    color:#999;
    font-size:14px;
}
canvas{
    width: 100%;
    height: 250px;
}
.login_bottom{
    margin-bottom:10px;
}