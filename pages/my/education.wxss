@import '../common/css/common.wxss';

.page {
    height:100%;
}
.page .page__bd{
    height:100%;
}
.weui-cell{
    background-color:#fff;
    font-size:15px;
    margin-bottom:10px;
    padding:10px 15px 5px 15px;
     border-top:1px solid #e1e1e1;
    border-bottom:1px solid #e1e1e1;
}
.weui-cell__bd{
    width:100%;
}
.doctor_button{
    margin-top:10px;
}
.no_data{
    display:block;
    width:100%;
    text-align:center;
    height:70%;
}
.data{

}
.no_data span{
    padding-top:50%;
    display:inline-block;
}
button[type="primary"].doctor_button{
    width:60%;
    display:inline-block;
    float:right;
    right:5%;
}
.doctor_back[type="primary"]
{
    font-weight:600;
    width:28%;
    background-color:#77d2fd;
    margin-top:10px;
    display:inline-block;
    left:5%;
    height:46px;
}
.weui-cell p{
    width:100%;
    display:inline-block;
    color:#414b50;
}
.weui-cell p:first-child{   
    font-size:15px;
    color:#919191;
}
.weui-cell p:last-child{
    color:#919191;
    position:relative;
    margin-top:-8px;
    display:block;

}
.weui-cell p:first-child span{
    border-left:3px solid #00a9ff;
    padding-left:10px;
}
.weui-cell p:last-child span{
    margin-left:22px;
}
.weui-cell p:last-child span:last-child{
    margin-left:42px;
}
.weui-cell p.ellipsis{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width:92%;
}
.next_a{
    font-size:15px;
    float:right;
    color:#00acff;
    margin-bottom:20px;
    padding-left:0px;
    border:0;
    padding-right:25px;
}
.next_a:before{
    border-color:#00acff;
}
.load_more{
    font-size:16px;
    text-align:center;
    display:block;
}

.page.has_bottom{
    padding-bottom:100px;
}