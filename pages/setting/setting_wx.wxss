@import '../common/css/common.wxss';

button[type="primary"].doctor_button{
    width:60%;
    display:inline-block;
    float:right;
    right:5%;
}
.doctor_back[type="primary"]
{
    font-weight:600;
    width:28%;
    background-color:#77d2fd;
    margin-top:10px;
    display:inline-block;
    left:5%;
    height:46px;
}
.weui-cell{
    background-color:#fff;
    border-bottom:1px solid #e1e1e1;
    margin-top:0px;
    font-size:16px;
    color:#414b50;
}
.weui-cells__title{
    background-color:#fff;
    margin-bottom:0;
    margin-top:5px;
    border-top:1px solid #e1e1e1;
     font-size:16px;
    color:#414b50;
    font-weight:600;
    padding-top:10px;

}
.weui-cells__title:first-child{
    margin-top:0px;
}
.weui-cells__title span{
     color:#fd8925;
    margin-left:5px;
}
.weui-label{
    font-weight:600;
}
.weui-cell_input,.weui-cell_textarea{
    padding:0px 0px;
}
.weui-cell_textarea textarea,.weui-cell_input input{
    width:100%;
    padding:10px 15px;
    background-color:#fafafa;
}
.weui-cell_p{
    border:0;
    background-color:#f5f5f5;
    text-align:center;
}
.weui-cell_p p{
    width:100%;
    font-weight:600;
    padding-left:45px;
}
.weui-cell_p p i{
    position:absolute;
    left:50%;
    margin-left:-24px;
    top:50%;
    margin-top:-10px;
    background-repeat:no-repeat;
    width:26px;
    height:20px;
}
.weui-cells__title b{
    color:#919191;
    font-size:14px;
    font-weight:normal;
}
.page__bd p{
    color:#919191;
    font-size:12px;
    padding-left:15px;
    font-weight:500;

}