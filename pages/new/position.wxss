@import 'common.wxss';



.content_block .title{
    font-size:16px;
    color:#414b50;
    margin-left:15px;
    width:200px;
    font-weight:600;
    margin-top:5px;
    margin-bottom:5px;

}
.content_block .title span{
    color:#9ea2a4;
    margin-left:5px;
    font-size:14px;
    font-weight:normal;
}
.content_block table{
    font-size:15px;
    margin-left:15px;
    background-color:#e3f6ff;
    color:#414b50;
    display: table;
    border-collapse:collapse;
    font-weight:600;
    margin-top:5px;
    margin-bottom:10px;

}
.content_block table thead{
        display: table-header-group;
    vertical-align: middle;
    border-color: inherit;
}
.content_block table tbody{
        display: table-row-group;
    vertical-align: middle;
    border-color: inherit;
}
.content_block table tr {
    display: table-row;
    vertical-align: inherit;
    border-color: inherit;
     height:40px;
     line-height:40px;
     border-bottom:1px solid #fff;
}
.content_block table tbody tr{
    height:50px;
    line-height:50px;
}
.content_block table td {
    display: table-cell;
    vertical-align: inherit;
    text-align:center;
    border-right:1px solid #fff;
}

.content_block table tbody tr td.checked{
    background-size:100%;
    background-color:#b6e7ff;
    background-image:url(data:image/png;base64,)
}
.content_block .textarea{
    background-color:#fafafa;
    margin-bottom:5px;
    border-bottom:1px solid #e1e1e1;
}
.content_block .textarea textarea{
    margin-left:15px;
    font-size:15px;
    height:50px;
}
.department{
    font-size:15px;
    font-weight:600;
    color:#414b50;

}

.department .weui-cell{
    border-bottom:1px solid #e1e1e1;
    padding:0px;
    margin-left:15px;
    padding-right:15px;

}
.weui-cell::before {
    border-top:0;
}
.department .content_select{
    margin-left:15px;
    border-bottom:1px solid #e1e1e1;
    margin-bottom:5px;
}
.select-block{
    width:75px;
    padding:2px 5px;
    text-align:center;
    font-size:15px;
    color:#00acff;
    border:1.5px solid #f0f0f0;
    border-radius:15px;
    margin-right:10px;
    margin-bottom:5px;
    display:inline-block;
}
.select-block.checked{
    background-color:#66cdff;
    border:1px solid #66cdff;
    color:#fff;
}
.content_block .allow{
     font-size:15px;
    font-weight:600;
    color:#414b50;   
    margin-left:15px;
    padding:10px 0px;
    display:inline-block;

}
.content_block .allow span{
    color:#9ea2a4;
    font-size:12px;
    font-weight:normal;
}
.allowSwitch{
    float:right;
    margin-top:7px;
}
