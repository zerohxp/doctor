@import 'common.wxss';

.title{
    color:#414b50;
    font-size:16px;
    font-weight:600;
    margin-left:15px;
    margin-top:10px;
    margin-bottom:10px;
}
.weui-cell_input{
    min-height:42px;
}
.content_block .weui-label{
    width:80px;
    color:#414b50;
    font-size:15px;
    font-weight:600;

}
.content_block .weui-label span{
     color:#fd8925;
    margin-left:5px;
}
.weui-select{
    text-align:left;
}
.weui-select.label{
    color:#bfbfbf;
}
.weui-cell__bd{
    color:#414b50;
    font-size:15px;
    font-weight:600;
}
.content_block .textarea{
    background-color:#fafafa;
    margin-bottom:5px;
    border-bottom:1px solid #e1e1e1;
}
.content_block .textarea textarea{
    margin-left:15px;
    font-size:15px;
    height:50px;
}
.edit_practice{
    position:absolute;
    right:8px;
    background-color:#00acff;
    color:#fff;
    padding:2px 8px;
    border-radius:5px;
    font-size:14px;
    padding-left:26px;

}
.edit_practice i{
    background-image:url(data:image/png;base64,);
    width:12px;
    height:12px;
    background-size:100%;
    display:block;
    top:50%;
    position:absolute;
    margin-top:-6px;
    left:8px;

}